#include <stdio.h>

int main() {
    int arr[10], i;
  printf("Enter 10 integers:\n");
    for (i = 0; i < 10; i++) {
        scanf("%d", &arr[i]);
    }
 printf("Positions of even numbers in the array are:\n");
    for (i = 0; i < 10; i++) {
        if (arr[i] % 2 == 0) {
            printf("Position %d (Value: %d)\n", i + 1, arr[i]);
        }
    }
   return 0;
}
